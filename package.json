{
  "name": "atsumeru",
  "version": "1.0.0",
  "description": "An application to combine RSS feeds of anime downloads",
  "author": {
    "name": "ColMarek",
    "email": "colmarek254@gmail.com",
    "url": "https://colmarek.github.io"
  },
  "main": "main.js",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "start:dev": "nodemon --watch . --exec \"electron . --debug\"",
    "build": "rimraf dist && electron-builder"
  },
  "dependencies": {
    "axios": "^0.19.1",
    "custom-electron-titlebar": "^3.2.1",
    "moment": "^2.24.0",
    "nedb": "^1.8.0",
    "parse-torrent": "^7.0.1",
    "winston": "^3.2.1",
    "xml2js": "^0.4.23"
  },
  "devDependencies": {
    "electron": "^7.1.8",
    "electron-builder": "^21.2.0",
    "eslint": "^6.8.0",
    "nodemon": "^2.0.2",
    "rimraf": "^3.0.0"
  },
  "build": {
    "appId": "com.colmarek.${name}",
    "productName": "Atsumeru",
    "copyright": "Copyright Â© 2020 ColMarek",
    "mac": {
      "category": "public.app-category.entertainment",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "assets/img/icon.icns"
    },
    "win": {
      "target": [
        "portable"
      ],
      "icon": "assets/img/icon.ico"
    }
  }
}
